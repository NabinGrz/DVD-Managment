@model IEnumerable<RopeyDVDs.Models.CastMember>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.DVDNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DVDTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DVDTitle.DVDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actor.ActorFirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CastMemberNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CastMemberNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CastMemberNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
