<table class="table">
    <thead>
        <tr>
            <th>DVD Number</th>
            <th>DVD Title</th>
            <th>Cast Memeber No</th>
            <th>Actor First Name</th>
            <th>Actor Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.name)
        {
            <tr>
                <td>@item.dvdTitle.DVDNumber</td>
                <td>@item.dvdTitle.DVDTitleName</td>
                <td>@item.castMember.CastMemberNo</td>
                <td>@item.actorDetails.ActorFirstName</td>
                <td>@item.actorDetails.ActorSurname</td>

