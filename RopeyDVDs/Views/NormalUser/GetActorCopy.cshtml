
@{
    ViewData["Title"] = "GetActorsLoanCopy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetActorsLoanCopy</h1>

<div class="container">
    <form action="@Url.Action("GetActorCopy", "NormalUser")" method="get">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label for="ActorSurName" class="control-label"></label>
                    <select id="surname" name="surname" class="form-control custom-select bg-white border-left-0 border-md" required>
                        <option value="">Select a actor surname</option>
                        @foreach (var name in ViewBag.actorName)
                        {
                            <option value="@name.ActorSurname"> @name.ActorFirstName @name.ActorSurname</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            @*<th>ActorFirstName</th>*@
            <th>DVD Title Name</th>
            <th>No of copies on shelves</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in  ViewBag.name)
        {
            <tr>
               <td>@item.dvdTitle.DVDTitleName</td>
               <td>@item.castMember.DVDNumber</td>
               @* <td>@item.dvdCopy.Stock</td>*@


                @*     <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>*@

            </tr>
        }
    </tbody>
</table>
