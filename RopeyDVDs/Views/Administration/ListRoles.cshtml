@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Titile = "All Roles";
}

<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    .fa {

            font-size: 20px;
            text-decoration: none;
        }

            .fa:hover {
                color: red;
                opacity: 0.7;
            }

        

        .fa-edit {
            color: green;
        }

div{
color:black;
}
</style>
</head>

<h1 style="color:white;"> All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="administration" asp-action="CreateRole">

        Add New Role
    </a>
        <a class="btn btn-primary mb-3 ms-3" style="width:auto" asp-controller="administration" asp-action="ListUsers">

        List Users
    </a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title"> @role.Name</h5>

            </div>
            <div class="card-footer">
                <a class="fa fa-edit" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id"></a>
                @*<a href='#' class="btn btn-danger">Delete</a>*@
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">

                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="CreateRole">

                Create Role
            </a>
        </div>

    </div>
}
</html>