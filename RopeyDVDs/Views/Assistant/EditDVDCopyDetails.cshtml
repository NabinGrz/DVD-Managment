@{
    ViewData["Title"] = "RecordDVDCopy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit DVD records</h1>
<style>
    .card-body {
        color: white;
    }

    .card {
        background-color: rgba(255,255,255,0.13);
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.1);
    }
</style>
<div class="row">
    <div class="col-md-6 ">
        <form action="/Assistant/RecordDVDCopy/@ViewBag.UserLoanDetails.LoanNumber" method="post" class="card text-start " style="color:white;">
            <div asp-validation-summary="All" class="text-danger"></div>
            <table>
                <tr>
                    <td><label id="LoanNumber" class="control-label">Loan Number: </label></td>
                    <td> <input type="text" value="@ViewBag.UserLoanDetails.LoanNumber" id="LoanNumber" name="LoanNumber" placeholder=""></td>
                </tr>
                <tr>
                    <td><label id="LoanTypeNumber" class="control-label">Loan Type Number: </label></td>
                    <td>  <input type="text" value="@ViewBag.UserLoanDetails.LoanTypeNumber" id="LoanTypeNumber" name="LoanTypeNumber" placeholder=""></td>
                </tr>
                <tr>
                    <td><label id="MemberNumber" class="control-label">Member Number: </label></td>
                    <td>  <input type="text" value="@ViewBag.UserLoanDetails.MemberNumber" id="MemberNumber" name="MemberNumber" placeholder=""></td>
                </tr>
                <tr>
                    <td><label id="CopyNumber" class="control-label">Copy Number: </label></td>
                    <td> <input type="text" value="@ViewBag.UserLoanDetails.CopyNumber" id="CopyNumber" name="CopyNumber" placeholder=""></td>
                </tr>
                <tr>
                    <td><label id="DateReturned" class="control-label">Date Returned: </label></td>
                    <td><input type="text" value="@ViewBag.ReturnDate" id="DateReturned" name="DateReturned" placeholder=""></td>
                </tr>
                <tr>
                    <td><label id="DateOut" class="control-label">Date Out: </label></td>
                    <td> <input type="text" value="@ViewBag.UserLoanDetails.DateOut" id="DateOut" name="DateOut" placeholder=""></td>
                </tr>
                <tr>
                    <td><label id="DateDue" class="control-label">Date Due: </label></td>
                    <td><input type="text" value="@ViewBag.UserLoanDetails.DateDue" id="DateDue" name="DateDue" placeholder=""></td>
                </tr>
                <tr>
                    <td> <label id="OverDue" class="control-label">Over Due Days: </label></td>
                    <td><input type="text" value="@ViewBag.OverDue" id="OverDue" name="OverDue" placeholder=""></td>
                </tr>
            </table>
            <div class="card-body form-group">
                <label id="PenaltyCharge" class="control-label">Your penalty charge wil be: @ViewBag.OverDue x @ViewBag.PenaltyCharge => @ViewBag.TotalCharge</label>
            </div>
            @*  <div class="form-group">
                <label id="PenaltyCharge" class="control-label">Penalty Charge </label>
                <input type="text" value="@ViewBag.PenaltyCharge" id="PenaltyCharge" name="PenaltyCharge" placeholder="">
                </div>*@
            <div class="col-sm">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Record DVD Copy Return</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>