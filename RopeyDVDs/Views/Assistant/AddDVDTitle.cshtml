@{
    ViewData["Title"] = "AddDVDTitleView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add new DVD Title</h1>

<div class="container">
    <div class="form-group">
                <label id="dvdtitle" class="control-label">DVD Title</label>
                <input type="text" id="dvdtitle" name="dvdtitle" placeholder="">
            </div>
    <form action="@Url.Action("GetActorDetails", "NormalUser")" method="get">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label for="ActorSurName" class="control-label"></label>
                    <select id="surname" name="surname" class="form-control custom-select bg-white border-left-0 border-md" required>
                        <option value="">Select a producer</option>
                        @foreach (var name in ViewBag.producer)
                        {
                            <option value="@name.ProducerName"> @name.ProducerNumber @name.ProducerName</option>
                        }
                    </select>
                </div>
            </div>
             <div class="col-sm">
                <div class="form-group">
                    <label for="ActorSurName" class="control-label"></label>
                    <select id="surname" name="surname" class="form-control custom-select bg-white border-left-0 border-md" required>
                        <option value="">Select a actor</option>
                        @foreach (var name in ViewBag.actor)
                        {
                            <option value="@name.ActorFirstName"> @name.ActorFirstName @name.ActorSurname</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
