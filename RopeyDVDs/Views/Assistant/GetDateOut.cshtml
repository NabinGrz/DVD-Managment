@{
    ViewData["Title"] = "GetDateOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details of DVD's copy</h1>

<style>
    .bg-custom {
        background-color: #E50914;
    }
</style>
<div class="container">
    <form action="@Url.Action("GetDateOut", "Assistant")" method="get">
        <div class="row">
            <div class="col-sm-9">
                <div class="form-group">
                    <label for="ActorSurName" class="control-label"></label>
                    <select id="memberNumber" name="memberNumber" class="form-control custom-select bg-white border-left-0 border-md" required>
                        <option value="">Select a member id</option>
                        @foreach (var member in ViewBag.memberNumbers)
                        {
                            <option value="@member.MembershipNumber"> @member.MembershipNumber - @member.MembershipFirstName</option>
                        }
                    </select>
                </div>
            </div>
                    <div class="col-sm-3 mt-4">
                        <button type="submit" class="btn btn-primary">Search ></button>
                    </div>
        </div>
    </form>
</div>



<table class="table table-custom mt-4 text-light">
    <thead class="bg-custom">
        <tr>
            <th>DVD Title Name</th>
            <th>Copy Number</th>
            <th>Date Out</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.date)
        {
            <tr>
                <td>@item.dvdTitle.DVDTitleName</td>
                <td>@item.dvdCopy.CopyNumber</td>
                <td>@item.loan.DateOut</td>


                @*     <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>*@

            </tr>
        }
    </tbody>
</table>

