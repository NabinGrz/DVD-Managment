@{
    ViewData["Title"] = "GetDVDofNoLoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Total loans a member has taken</h1>

<table class="table text-light">
    <thead class="bg-custom">
        <tr>
            <th>Membership First Name</th>
            <th>Membership Category Number</th>
            <th>Allowed Loans</th>
            <th>Total Loans</th>
        </tr>
    </thead>
    <tbody>
        <h3 style="background-color:yellow; color:black;">Too many DVDs on loan for:</h3>
        @foreach (var item in ViewBag.totalloans)
        {

            @if (int.Parse(@item.MembershipCategoryTotalLoans) < @item.TotalLoans)
            {
                <div class="container" style="position:relative;color:black; right:80px; top:2px; background-color:yellow; width:300px">
                    <ul style="ali">
                    <li>@item.MembershipFirstName</li>
                </ul>
                </div>
                
            }
            <tr>

                <td style="width:210px">@item.MembershipFirstName</td>
                <td style="width:210px">@item.MembershipCategoryNumber</td>
                <td style="width:180px">@item.MembershipCategoryTotalLoans</td>
                <td style="width:180px">@item.TotalLoans</td>

            </tr>
        }
    </tbody>
</table>

