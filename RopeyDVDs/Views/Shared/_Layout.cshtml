                            </li>*@

                        }

                    </ul>
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Manager"))
                    {
                        <ul class="navbar-nav order-md-last">
                            <li class="nav-item">
                                <img src="~/img/online.png" style="height:10px; width:10px" />
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" style="color: white">Manager: @User.Identity.Name</a>
                            </li>
                        </ul>
                    }
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Assistant"))
                    {
                        <ul class="navbar-nav order-md-last">
                            <li class="nav-item">
                                <img src="~/img/online.png" style="height:10px; width:10px" />
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" style="color: white">Assistant: @User.Identity.Name</a>
                            </li>
                        </ul>
                    }
                         @if (signInManager.IsSignedIn(User) && User.IsInRole("NormalUser"))
                    {
