                        </li>*@


                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" style="color: white" asp-controller="Administration" asp-action="ListRoles">Manage Roles</a>
                            </li>

                             <li class="nav-item">
