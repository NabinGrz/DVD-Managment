                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" style="color: white">NormalUser: @User.Identity.Name</a>
                            </li>
                        </ul>
                    }
                   <ul class="navbar-nav order-md-last">
                    @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" style="color: white" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" style="color: white" asp-controller="Account" asp-action="ResetPassword">ResetPassword</a>
                            </li>

                        }
                        </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="navbar-fixed-bottom">
        <div class="container-fluid text-center text-md-left" style="color:red">
            &copy; 2022 - 19031160|19031368|19031726
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
