@model IEnumerable<RopeyDVDs.Models.Actor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class='btn btn-primary'>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActorFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorSurname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActorNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorSurname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActorNumber" class='btn btn-success'>Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActorNumber" class='btn btn-primary'>Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActorNumber" class='btn btn-danger'>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
